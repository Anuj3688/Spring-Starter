<?xml version="1.0" encoding="UTF-8"?>
<beans   xmlns="http://www.springframework.org/schema/beans"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:p="http://www.springframework.org/schema/p"
           xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Method 1 of writing bean injection  -->
    <bean class="org.spring.Student" name="student1">
        <property name="studentId">
            <value>101</value>
        </property>
        <property name="studentName">
            <value>Ram</value>
        </property>
        <property name="studentAddress">
            <value>Ayodhya</value>
        </property>
    </bean>
<!--   Method 2 of bean injection -->
    <bean class="org.spring.Student" name="student2">
        <property name="studentId" value="234"/>
        <property name="studentName" value="hanuman"/>
        <property name="studentAddress" value="Ayodhya"/>
    </bean>

<!--  Method 3 of Bean injection  -->
    <bean class="org.spring.Student" name="student3"  p:studentName="Anuj" p:studentAddress="Mumbai" p:studentId="121" />
</beans>